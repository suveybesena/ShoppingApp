<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProductName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/arimo</item>
    </style>

    <style name="ProductDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="ProductPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#989898</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/arimo</item>

    </style>

    <style name="Subtotal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragmentScenarioEmptyFragmentActivityTheme" parent="android:Theme.WithActionBar">
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>